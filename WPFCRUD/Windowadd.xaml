<Window x:Class="WPFCRUD.Windowadd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCRUD"
        mc:Ignorable="d"
        Title="Windowadd" Height="450" Width="800"
        Foreground="Black"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        
        >
    
    
    <Border Background="Bisque" CornerRadius="0,0,200,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Munkatársak felvétele" FontSize="30" TextAlignment="Center" Grid.ColumnSpan="2" Padding="0,20,0,20">
               
            </TextBlock>
            <TextBlock Text="X" FontSize="15" HorizontalAlignment="Right" TextAlignment="Center" Grid.ColumnSpan="2" Padding="0,5,5,0" PreviewMouseDown="TextBlock_PreviewMouseDown">

            </TextBlock>
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Név" FontSize="16" HorizontalAlignment="Right" Margin="10"></TextBlock>
                <TextBlock Text="Kor" FontSize="16" HorizontalAlignment="Right" Margin="10"></TextBlock>
            </StackPanel>

            <StackPanel x:Name="spInput" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                <TextBox FontSize="16" Margin="0,0,30,0" Padding="0,5" Text="{Binding Name}"></TextBox>
                <TextBox FontSize="16" Margin="0,10,30,0" Padding="0,5" Text="{Binding Age}"></TextBox>
            </StackPanel>
            <Button Content="Nézet" Background="Azure" Click="btnClose_Click_1" Margin="10,10,0,30" HorizontalAlignment="Left" FontSize="15" Padding="0,0" Width="80"></Button>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button Content="Mentés" Background="Azure"  Margin="10,0,0,5" HorizontalAlignment="Left" FontSize="15" Padding="0,5" Width="80"></Button>
                <Button x:Name="btnClose" Click="btnClose_Click" Content="Bezárás"  Background="Azure"  Margin="10,0,0,5" HorizontalAlignment="Left" FontSize="15" Padding="0,5" Width="80"></Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
